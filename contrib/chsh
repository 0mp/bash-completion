# -*- mode: shell-script; sh-basic-offset: 8; indent-tabs-mode: t -*-
# ex: ts=8 sw=8 noet filetype=sh

# chsh(1) completion
#
_chsh()
{
	local cur prev

	COMPREPLY=()
	cur=`_get_cword`
	prev=${COMP_WORDS[COMP_CWORD-1]}

	if [ "$prev" = "-s" ]; then
		_shells
	else
		COMPREPLY=( $( compgen -u -- "$cur" ) )
	fi

	return 0
}
complete -F _chsh chsh
