# PINE address-book completion

have pine &&
_pineaddr()
{
	local cur

	COMPREPLY=()
	cur=`_get_cword`

	COMPREPLY=( $( compgen -W '$( awk "{print \$1}" ~/.addressbook 2>/dev/null)' \
			-- "$cur" ) )
} &&
complete -F _pineaddr $default pine

