# apache2ctl(1) completion

have apache2ctl && {
_apache2ctl() {
    local APWORDS cur

    COMPREPLY=()
    cur=`_get_cword`

    APWORDS=$(apache2ctl 2>&1 >/dev/null | awk 'NR<2 { print $3; exit }' | \
        tr "|" " ")

    COMPREPLY=( $( compgen -W "$APWORDS" -- "$cur" ) )
}
complete -F _apache2ctl apache2ctl
}

