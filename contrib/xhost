# -*- mode: shell-script; sh-basic-offset: 8; indent-tabs-mode: t -*-
# ex: ts=8 sw=8 noet filetype=sh
#
# xhost(1) completion
#
have xhost &&
_xhost ()
{
	local cur=`_get_cword`

	case "$cur" in
		+*) _known_hosts_real -h "${cur:1}" -p+ ;;
		-*) _known_hosts_real -h "${cur:1}" -p- ;;
		*)  _known_hosts_real -h "$cur" ;;
	esac

	return 0
}
complete -F _xhost xhost
