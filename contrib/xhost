# xhost(1) completion

have xhost &&
_xhost ()
{
	local cur=`_get_cword`

	case "$cur" in
		+*) _known_hosts_real -p+ "${cur:1}" ;;
		-*) _known_hosts_real -p- "${cur:1}" ;;
		*)  _known_hosts_real "$cur" ;;
	esac

	return 0
}
complete -F _xhost xhost

