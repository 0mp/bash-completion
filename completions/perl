# bash completion for perl

have perl &&
{
complete -C ${BASH_SOURCE[0]%/*}/helpers/perl -o nospace -o default perl

complete -C ${BASH_SOURCE[0]%/*}/helpers/perl -o nospace -o default perldoc
}

# Local variables:
# mode: shell-script
# sh-basic-offset: 4
# sh-indent-comment: t
# indent-tabs-mode: nil
# End:
# ex: ts=4 sw=4 et filetype=sh
